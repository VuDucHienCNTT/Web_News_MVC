@model Web_MVC.Models.News
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="well-sm index-page" style="border:1px solid #d5d5d5; margin-bottom:1%;border-radius:unset;">
        <a href="/">Trang chủ</a> >> <span>@Model.Title</span> >>
    </div>
</div>

<div class="col-md-6">
    <div class="widget wid-vid">
        <span class="vid-name" style="color:#0026ff;font-size:26px;font-weight:bold">@Model.Title</span><br />
        <h6 style="line-height:1.5">@Model.Summary</h6>
        <div class="info">
            <span><i class="fa fa-user"></i>@Model.Account.Fullname</span>/ 
            <span><i class="fa fa-clock-o"></i>@Model.Dateposted.Value.ToString("dd/MM/yyyy hh:mm tt")</span>/ 
            <span><i class="fa fa-eye"></i>@Model.View</span>
        </div>
        <p style="margin-top: 10px">
            @Html.Raw(@Model.Content)
        </p>
        <div class="info">
            <span style="float:right;font-size:16px;font-weight:bold">Tác giả: @Model.Author.Name</span>
        </div>

        <br />
        <br />
        
        <div class="fb-comments" data-href="http://localhost:64008" data-numposts="5" data-width="100%"></div>        
        <div class="box">
            <div class="box-header header-vimeo">
                <h2>Cùng chuyên mục</h2>
            </div>
        </div>
        <div style="margin-top:-20px;">
            @Html.Action("TinTucCungChuyenMuc", "Home", new List<Web_MVC.Models.News>())
        </div>
    </div>
</div>