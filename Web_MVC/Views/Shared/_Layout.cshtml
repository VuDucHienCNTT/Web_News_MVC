                                <form role="form" class="form-horizontal" method="post" action="">
                                    <input type="text" placeholder="Nhập từ khóa" name="tukhoa" class="form-control">
                                </form>
                            </div>
                        }
                    </div>
                    <!---- Start Widget ---->
                    @Html.Action("TinTucMoiNhat", "Home", new List<Web_MVC.Models.News>())
                    <!---- Start Widget ---->
                    @Html.Action("TheLoaiDropdown", "Home", new List<Web_MVC.Models.Category>())
                    <!-- Start Widget -->
                    <div class="widget wid-new-post">
                        <div class="heading"><h4>New Posts</h4></div>
                        <div class="content">
                            <h6>Lorem Ipsum is simply dummy</h6>
                            <img src="~/Content/images/22.jpg" />
                            <ul class="list-inline">
