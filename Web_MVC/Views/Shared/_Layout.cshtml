@{
    Layout = null;
    HttpApplicationState application = HttpContext.Current.ApplicationInstance.Application;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="/Content/css/bootstrap.css" type="text/css">

    <!-- Owl Carousel Assets -->
    <link href="/Content/owl-carousel/owl.carousel.css" rel="stylesheet">
    <link href="/Content/owl-carousel/owl.theme.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/Content/css/style.css">
    <link href="/Content/css/bootstrap-datetimepicker.min.css" rel="stylesheet" media="screen">

    <!-- Custom Fonts -->
    <link rel="stylesheet" href="/Content/font-awesome-4.4.0/css/font-awesome.css" type="text/css">

    <!-- jQuery and Modernizr-->
    <script src="~/Scripts/jquery-3.1.0.js"></script>
    <!-- Core JavaScript Files -->
    <script src="/Content/js/bootstrap.js"></script>
</head>

<header>
    <!--Navigation-->
    <nav id="menu" class="navbar container">
        <div class="navbar-header">

            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-controls="navbar" style="margin-bottom:-11px">
                <i class="fa fa-bars fa-2x" style="color:#ffffff;margin-top:-16px;"></i>
            </button>
        </div>

        <div class="collapse navbar-collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a href="~/Home/Index"><i class="glyphicon glyphicon-home"></i></a></li>


                @Html.Action("Menu", "Home", new List<Web_MVC.Models.Category>())

            </ul>
            <ul class="nav navbar-nav navbar-right" style="margin-right:0px;">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" title="Account" data-toggle="dropdown">Account <i class="fa fa-caret-down"></i></a>
                    <div class="dropdown-menu" style="margin-left: -203.625px;">
                        <div class="dropdown-inner">
                            <ul class="list-unstyled">
                                @if (Session["Id"] == null)
                                {
                                    <li><a href="~/Admin/Account/Signin" title="Log in">Log in <i class="glyphicon glyphicon-log-in"></i></a></li>
                                }
                                else
                                {
                                    <li><a href="~/Admin/Account/Logout" title="Log out"> @Session["FullName"] <i class="glyphicon glyphicon-log-out"></i></a></li>
                                }
                                <li><a href="~/Admin/Account/Signup" title="Sign up">Sign up <i class="glyphicon glyphicon-user"></i></a></li>
                            </ul>
                        </div>
                    </div>
            </ul>
        </div>
    </nav>
</header>


<body>
    <div id="page-content" class="index-page container">
        <div class="row">

            @RenderBody()

            <div id="sidebar">
                <div class="col-md-4">
                    <!---- Start Widget ---->
                    <div class="widget wid-tags">
