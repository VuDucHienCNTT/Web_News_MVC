
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
@using PagedList.Mvc;
@model PagedList.PagedList<Web_MVC.Models.News>

<!--Content Header-->
<div class="content-header">
    <h1>
        News
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="../../Admin/News/Add">News</a></li>
        <li class="active"><a href="../../Admin/News/Add">Add New</a></li>
    </ol>
</div>

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Listing News</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div style="margin-top:-8px;">
                        Show @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber ) / @Model.PageCount page
                    </div>
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>News Id</th>
                                <th>News Title</th>
                                <th>News Summary</th>
                                <th>News Content</th>
                                <th>Poster</th>
                                <th>Date Posted</th>
                                <th>Author</th>
                                <th>Avatar</th>
                                <th style="text-align:center;">Option</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@item.Id</td>
                                    <!--Giới hạn ký tự hiển thị -->
                                    @if (item.Title.Length > 80)
                                    {
                                        <td>@item.Title.Substring(0, 80)...</td>
                                    }
                                    else
                                    {
                                        <td>@item.Title</td>
                                    }
                                    <!--Giới hạn ký tự hiển thị -->
                                    @if (item.Summary.Length > 80)
                                    {
                                        <td>@item.Summary.Substring(0, 80)...</td>
                                    }
                                    else
                                    {
                                        <td>@item.Summary</td>
                                    }
                                    <!--Giới hạn ký tự hiển thị -->
                                    @if (item.Content.Length > 80)
                                    {
                                        //@Html.Raw để hiển thị dạng văn bản thuần
                                        <td>@Html.Raw(@item.Content.Substring(0, 80))...</td>
                                    }
                                    else
                                    {
                                        <td>@Html.Raw(@item.Content)</td>
                                    }
                                    <td>@item.Poster</td>
                                    <td>@item.Date_posted</td>
                                    <td>@item.Author</td>
                                    <td>@item.Avatar</td>
                                    <td>
                                        <div class="tools" style="text-align:center;">
                                            <a href="/Admin/News/Edit/@item.Id"><i class="glyphicon glyphicon-edit" title="Edit"></i></a>
                                            <a href="/Admin/News/Delete/@item.Id"><i class="glyphicon glyphicon-trash" title="Delete"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <div style="height:55px;margin-top:-10px;">
                        @Html.PagedListPager(Model, page => Url.Action("Add", new { page = page }))
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add New News</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>

                @using (Html.BeginForm())
                {
                    <div class="box-body">
                        <div class="form-group">
                            <label>Title</label>
                            <textarea name="title" rows="3" class="form-control" placeholder="Enter title. Maximum of 500 characters"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Summary</label>
                            <textarea name="summary" rows="4" class="form-control" placeholder="Enter summary. Maximum of 500 characters"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Content</label>
                            <textarea id="content" name="content"></textarea>
                            <script type="text/javascript">CKEDITOR.replace("content");</script>
                        </div>
                        <div class="form-group">
                            <label>Poster</label>
                            <input type="text" class="form-control" name="poster" value="Ban Biên Tập" placeholder="Enter poster">
                        </div>
                        <div class="form-group">
                            <label>Date posted</label>
                            <input type="text" class="form-control" name="dateposted" placeholder="Enter date posted">
                        </div>
                        <div class="form-group">
                            <label>Author</label>
                            <input type="text" class="form-control" name="author" placeholder="Enter author">
                        </div>
                        <div class="form-group">
                            <label>Avatar</label>
                            <input type="text" class="form-control" id="Avatar" name="avatar" placeholder="Enter avatar">
                            <input type="button" class="btn btn-default" id="Browse" value="...">
                        </div>
                        <script language="javascript" type="text/javascript">
                            $("#Browse").click(function () {
                                var finder = new CKFinder();
                                finder.selectActionFunction = function (fileUrl) {
                                    fileUrl = fileUrl.substring(fileUrl.lastIndexOf("/") + 1);
                                    $("#Avatar").val(fileUrl);
                                };
                                finder.popup();
                            });
                        </script>
                    </div>
                        <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                }
            </div>
        </div>

    </div>
</div>
