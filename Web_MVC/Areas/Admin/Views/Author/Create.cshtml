
@{
    ViewBag.Title = "Create Author";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<Web_MVC.Models.Author>

    <!--Content Header-->
    <div class="content-header">
        <h1>
            Author
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Admin/Categories/Create"><i class="fa fa-dashboard"></i>Home</a></li>
            <li><a href="~/Admin/Author/Create">Author</a></li>
            <li class="active"><a href="~/Admin/Author/Create">Create New</a></li>
        </ol>
    </div>


    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Listing Author</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>

                    </div>
                    <div class="box-body">
                        <div>
                            <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#myModal">Create New</button>

                            <div class="navbar-right" style="margin-top:-10px;">
                                @using (Html.BeginForm("Search", "Author", FormMethod.Post))
                                {
                                    <div class="navbar-form" role="search">
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="txttimkiem" name="txtsearch" style="border-bottom-left-radius:3px;border-top-left-radius:3px" placeholder="Search">
                                            <div class="input-group-btn">
                                                <button class="btn btn-default" id="btnsubmit" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Author id</th>
                                    <th>Author name</th>
                                    <th>Author address</th>
                                    <th style="text-align:center;">Option</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Address</td>
                                        <td>
                                            <div class="tools" style="text-align:center;">
                                                <a href="~/Admin/Author/Edit/@item.Id"><i class="glyphicon glyphicon-edit" data-toggle="tooltip" title="Edit"></i></a>
                                                <a onclick="return confirm('Bạn có muốn xóa không?')" href="~/Admin/Author/Delete/@item.Id"><i class="glyphicon glyphicon-trash" data-toggle="tooltip" title="Delete"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <script type="text/javascript" language="javascript">
                $("#btnsubmit").click(function(){
                    if ($("#txttimkiem").val() == "") {
                        alert("Nhập từ khóa cần tìm kiếm");
                        return false;
                    }
                });
            </script>
            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Create New</h4>
                        </div>
                        <div class="modal-body">
                            @using (Html.BeginForm())
                            {
                                <div class="box-body">
                                    <div class="form-group">
                                        <label id="errorname">Author name</label>
                                        <input type="text" id="txtauthorname" class="form-control" name="authorname" placeholder="Enter author name">
                                    </div>
                                    <div class="form-group">
                                        <label id="errorparent">Author address</label>
                                        <input type="text" id="txtauthoraddress" class="form-control" name="authoraddress" placeholder="Enter author address">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" id="btnsave" class="btn btn-primary">Save</button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            }                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
