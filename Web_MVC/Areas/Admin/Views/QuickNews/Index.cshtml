
@{
    ViewBag.Title = "Quick News";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        LoadQuickNews();
    });

    function LoadQuickNews() {
        $.ajax({
            type: 'GET',
            url: '@Url.Action("LoadQuickNews","QuickNews")',
            data: {},
            cache: false,
            success: function (data) {
                var html1 = "";
                for (i = 0; i < data.QuickNews1.length; i++) {
                    html1 = html1 + " <tr id='row-" + data.QuickNews1[i].ID + "'>" +
                                 "<td>" + data.QuickNews1[i].ID + "</td>" +
                                 "<td>" + data.QuickNews1[i].Title + "</td>" +
                                 "<td>" + data.QuickNews1[i].Content + "</td>" +
                                 "<td>" + data.QuickNews1[i].Author + "</td>" +
                                 "<td>" +
                                 "<div class='tools' id='tools-" + data.QuickNews1[i].ID + "' style='text-align:center'>" +
                                    "<a href=''><i class='glyphicon glyphicon-edit'></i></a>" + " " +
                                     "<a href='javascript:void(0)' onclick=DelQuickNews(" + data.QuickNews1[i].ID + ")><i class='glyphicon glyphicon-trash'></i></a>" +
                                "</div>" +
                                "</td>" +
                                 "</tr>";
                }
                $("#tblQuick tbody").html(html1);
            },
            error: function (e) {

                alert("Error!");
            },
        });
    }

    function AddQuickNews() {
        //Ẩn Modal sau khi click Save
        $("#myModal").modal('hide');

        var title1 = $("#idtitle").val();
        var content1 = $("#idcontent").val();
        var author1 = $("#idauthor").val();
        $.ajax(
        {
            type: 'POST',
            url: '@Url.Action("AddQuickNews","QuickNews")',
            cache: false,
            data:
            {
                'title': title1,
                'content': content1,
                'author': author1
            },
            success: function (obj) {
                if (obj != null) {
                    var html2 = " <tr>" +
                                 "<td>" + obj.ID + "</td>" +
                                 "<td>" + obj.Title + "</td>" +
                                 "<td>" + obj.Content + "</td>" +
                                 "<td>" + obj.Author + "</td>" +
                                 "<td>" +
                                 "<div class='tools' style='text-align:center'>" +
                                    "<a href=''><i class='glyphicon glyphicon-edit'></i></a>" + " " +
                                    "<a href=''><i class='glyphicon glyphicon-trash'></i></a>" +
                                "</div>" +
                                "</td>" +
                                 "</tr>";
                    $("#tblQuick tbody").append(html2);
                    //Sau khi Save thì xóa nội dung textbox
                    Clear();
                }
                else {
                    alert("lỗi rồi");
                }

            },
            error: function (e) {
                console.log("Error:" + e);
                alert("Error!");
            },
        })

        function Clear() {
            $("#idtitle").val("");
            $("#idcontent").val("");
            $("#idauthor").val("");
        }

    }

    function DelQuickNews(id) {
        var confirmDelete = confirm("Do you want to delete?");
        if (confirmDelete) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("DelQuickNews","QuickNews")',
                data: {
                    'id': id
                },
                success: function (id) {
                    $("#tblQuick tbody #row-" + id + "").remove();
                },
                error: function (e) {
                    console.log("Error:" + e);
                    alert("Error");
                },

            });
        }
    }
</script>
