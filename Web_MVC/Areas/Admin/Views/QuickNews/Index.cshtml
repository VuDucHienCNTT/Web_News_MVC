
@{
    ViewBag.Title = "Quick News";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        LoadQuickNews();
    });

    function LoadQuickNews() {
        $.ajax({
            type: 'GET',
            url: '@Url.Action("LoadQuickNews","QuickNews")',
            data: {},
            cache: false,
            success: function (data) {
                var html123 = "";
                for (i = 0; i < data.QuickNews1.length; i++) {
                    html123 = html123 + " <tr>" +
                                 "<td>" + data.QuickNews1[i].ID + "</td>" +
                                 "<td>" + data.QuickNews1[i].Title + "</td>" +
                                 "<td>" + data.QuickNews1[i].Content + "</td>" +
                                 "<td>" + data.QuickNews1[i].Author + "</td>" +
                                 "<td>" +
                                 "<div class='tools' style='text-align:center'>" +
                                    "<a href=''><i class='glyphicon glyphicon-edit'></i></a>" + " " +
                                    "<a href=''><i class='glyphicon glyphicon-trash'></i></a>" +
                                "</div>" +
                                "</td>" +
                                 "</tr>";
                }
                $("#tblQuick tbody").html(html123);
            },
            error: function (e) {
                alert("Error!");
            },
        });
    }

</script>
